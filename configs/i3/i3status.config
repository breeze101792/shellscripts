general {
    output_format = "i3bar"
    colors = false
    markup = pango
    interval = 5
    color_good = '#2f343f'
    color_degraded = '#ebcb8b'
    color_bad = '#ba5e57'
}

order += "load"
order += "memory"
# order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
# order += "ethernet enp6s0"
order += "ethernet enp13s0f3u1"
# order += "wireless wlp2s0"
order += "volume master"
# order += "battery 1"
order += "tztime local"

load {
    format = "<span background='#f59335'> %5min Load </span>"
}

memory {
    format = "<span background='#f59335'> M %free </span>"
    threshold_degraded = "10%"
    format_degraded = "MEMORY: %free"
}

cpu_temperature 0 {
    format = "<span background='#bf616a'> %degrees Â°C </span>"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

disk "/" {
    format = "<span background='#fec7cd'> R %free Free </span>"
}

disk "/home" {
    format = "<span background='#a1d569'> H %free Free </span>"
}

ethernet enp6s0 {
    format_up = "<span background='#88c0d0'> Eth %ip </span>"
    format_down = "<span background='#88c0d0'> Eth Disconnected </span>"
}

wireless wlp2s0 {
    format_up = "<span background='#b48ead'> %essid </span>"
    format_down = "<span background='#b48ead'> Wireless Disconnected </span>"
}

volume master {
    format = "<span background='#ebcb8b'> Vol %volume </span>"
    format_muted = "<span background='#ebcb8b'> Vol Muted </span>"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 1 {
    last_full_capacity = true
    format = "<span background='#a3be8c'> %status %percentage </span>"
    format_down = "No Battery"
    status_chr = "Charging"
    status_bat = "Battery"
    status_unk = "Unknown"
    status_full = "Charged"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = "<span background='#81a1c1'> %Y-%m-%d %H:%M:%S %Z </span>"
}

read_file uptime {
        path = "/proc/uptime"
}

