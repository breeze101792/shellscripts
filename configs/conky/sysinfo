# Conky, a system monitor, based on torsmo

alignment top_left
background no
use_xft yes
font Dejavu Sans:size=10
xftalpha 0
update_interval 2.0
total_run_times 0
own_window yes
own_window_transparent yes
own_window_type desktop
own_window_argb_visual yes
own_window_argb_value 120
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 512
maximum_width 250
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color 999999
default_shade_color black
default_outline_color black
gap_x 100
gap_y 532
no_buffers yes
cpu_avg_samples 2
text_buffer_size 4096
override_utf8_locale no
uppercase no
double_buffer yes

TEXT
${font Santana:size 12}${color white}SYSTEM INFOMATION${font}
$hr
SysInfo: $sysname $kernel
${color grey}Machine Uptime:$color $uptime
Time: ${time %H:%M:%S}  Date: ${time %e, %b}

Temperature$alignr
$hr
${color #42AE4A}CPU Core 0 Temp:$alignr${color lightgrey}${execi 8 sensors | grep 'Core 0' | cut -c15-19 | sed '/^$/d'} C
${color #42AE4A}CPU Core 2 Temp:$alignr${color lightgrey}${execi 8 sensors | grep 'Core 2' | cut -c15-19 | sed '/^$/d'} C


