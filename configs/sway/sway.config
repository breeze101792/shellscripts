###########################################
####    Var Defines                    ####
###########################################
# define super key.
set $mod Mod4

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:Entry"
set $ws2 "2:Editor"
set $ws3 "3:Coding"
set $ws4 "4:Experiment"
set $ws5 "5:Workspace"
set $ws6 "6:Workspace"
set $ws7 "7:Workspace"
set $ws8 "8:Workspace"
set $ws9 "9:Monitor"
set $ws10 "0:Workspace"

###########################################
####    Service Settings               ####
###########################################

# Notification Daemon
exec_always [ -z "$(pgrep -x swaync)" ] && swaync

# swayidle for screen saver
# 15 minutes to turn off screen, 30 minutes to sleep
exec_always swayidle -w \
         timeout 900 'swaymsg "output * power off"' \
         resume 'swaymsg "output * power on"' \
         timeout 1800 'systemctl suspend' \
         before-sleep 'swaylock -f --image ${HOME}/media/pictures/screensaver.jpg'
# exec_always  swayidle -w \
#              timeout 900 'swaymsg "output * dpms off"' \
#              resume 'swaymsg "output * dpms on"' \
#              timeout 1800 'systemctl suspend' \
#              before-sleep 'swaylock -f'

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec_always nm-applet

## Delay start
# exec_always sleep 5 && ibus-daemon --xim -d -r
# exec_always sleep 5 && ibus-daemon -rxRd
# for_window [app_id="ibus-ui-gtk3"] floating enable, border none
exec_always sleep 5 && fcitx5 -r -d
exec_always sleep 10 && pulseaudio --start

# for gesture
exec_always [ -z "$(pgrep -x ydotoold)" ] && ydotoold
exec_always libinput-gestures-setup start

###########################################
####    Sway Settings                  ####
###########################################

### General Settings

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
# font pango:monospace 13
font pango:Source Code Pro Medium, Source Han Sans TW, Source Han Sans CN, Source Han Sans HW K, Source Han Sans JP 10

# wallpaper
output "*" bg ${HOME}/media/pictures/wallpaper.jpg fill

### Scratchpad Settings
# scratchpad_minimize disable

### Titlebar Settings
titlebar_separator enable
titlebar_padding 4

### Workspace Layout
# workspace_layout tabbed
workspace_layout default

### Gaps and Borders
# disable gaps for better operation.
# gaps inner 2
# gaps outer 2
# # if smart_gaps on, gaps may not work
# smart_gaps on

default_border pixel 2
default_floating_border normal
# hide_edge_borders both
smart_borders on

### Opacity per window type
# Dim unfocused windows a bit
for_window [tiling] opacity 0.95 0.85
for_window [floating] opacity 0.93 0.75
for_window [shell="xwayland"] title_format "[XWayland] %title"
### Floating Rules
# for_window [class="^.*"] border pixel 2
for_window [window_role="pop-up"] floating enable
for_window [window_type="dialog"] floating enable

### Dim inactive windows
default_dim_inactive 0.1
dim_inactive_colors.unfocused #00000099
dim_inactive_colors.urgent #900000FF

### Shadows
shadows enable
shadows_on_csd disable
shadow_blur_radius 15
shadow_color #000000AA
shadow_offset 5 5
shadow_inactive_color #00000066

### Blur Settings
blur enable
blur_xray disable
blur_passes 2
blur_radius 5
blur_noise 0.02
blur_brightness 1.0
blur_contrast 1.0
blur_saturation 1.1

### Rounded Corners
corner_radius 3

### Input settings
input * {
    natural_scroll enabled
    tap enabled
    # accel_profile flat
}

input type:pointer {
    natural_scroll enabled
    left_handed enabled
}

input type:keyboard {
    repeat_delay 160
    repeat_rate 30
}
input type:touchpad {
    tap enabled
    natural_scroll enabled
}

