client.unfocused        $color_gray1       $color_gray0       $color_gray5   $color_gray1       $color_gray1

client.urgent           $color_red         $color_red         $color_gray0   $color_red         $color_red
client.placeholder      $color_gray0       $color_gray0       $color_gray5   $color_gray0       $$color_gray0
