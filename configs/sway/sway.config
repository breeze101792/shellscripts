## Bar
###########################################
# Blur Waybar background
layer_effects "waybar" {
    blur enable;
    blur_xray enable;
    blur_ignore_transparent enable;
    shadows enable;
    corner_radius 5;
}
bar {
    swaybar_command waybar
}
layer_effects "notifications" {
    blur enable;
    blur_ignore_transparent enable;
    corner_radius 10;
    shadows enable;
}

###########################################
####    Key shortcut                   ####
###########################################

## Default applications
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec alacritty

## Menu
# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# if wayland, we could use rofi-wayland, if x can work with -x11
bindsym $mod+d exec rofi -lines 12 -padding 18 -width 48 -location 0 -show drun -sidebar-mode -columns 2 -font 'Source Code Pro Medium 10' -theme Paper

## Toggle control center
bindsym $mod+Shift+n exec swaync-client -t -sw

## screen shot
# slurp to select screen
# grim to capture
# wl-clipboard to copy screen shot.
bindsym Print exec grim - | tee ${HOME}/pictures/screenshots/screenshot_$(date +%Y%m%d_%H%M%S).png | wl-copy && notify-send "Screen captured."
bindsym $mod+Print exec swaymsg -t get_tree | jq -r '.. | select(.focused?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | grim -g - - | tee ${HOME}/pictures/screenshots/screenshot_$(date +%Y%m%d_%H%M%S).png | wl-copy && notify-send "Screen captured."
bindsym $mod+shift+Print exec slurp | grim -g - - | tee  ${HOME}/pictures/screenshots/screenshot_$(date +%Y%m%d_%H%M%S).png | wl-copy && notify-send "Screen captured."

## Recording
# wf-recorder for recording
# wf-recorder -f recording.mp4
# wf-recorder -g "$(slurp)"

## Other configs
# config for functions.
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym XF86MonBrightnessUp exec brightnessctl set 5%+
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86Search exec bemenu-run

bindsym Ctrl+KP_Add exec pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym Ctrl+KP_Subtract exec pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status

