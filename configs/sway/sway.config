set $color_gray0          #1f1f1f
# base01 - inactive background
set $color_gray1          #393939
# base02 - border
set $color_gray2          #4a4a4a
# base03 - subtle border
set $color_gray3          #5e5e5e
# base04 - muted text
set $color_gray4          #afafaf
# base05 - main text
set $color_gray5          #c5c5c5
# base06 - light text
set $color_gray6          #dbdbdb
# base07 - light background
set $color_gray7          #f0f0f0

# Semantic Colors
# base08 - error/red
set $color_red            #fb4934
# base09 - warning/orange
set $color_orange         #fe8019
# base0A - highlight/yellow
set $color_yellow         #fabd2f
# base0B - success/green
set $color_green          #b8bb26
# base0C - accent/teal
set $color_teal           #8ec07c
# base0D - focus/blue
set $color_blue           #83a598
# base0E - special/purple
set $color_purple         #d3869b
# base0F - alternate warning
set $color_dark_orange    #d65d0e

# Property Name         Border             BG                 Text           Indicator          Child Border
client.focused          $color_blue        $color_gray1       $color_gray5   $color_teal        $color_blue
